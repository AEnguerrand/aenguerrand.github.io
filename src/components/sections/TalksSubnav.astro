---
interface NavItem {
  href: string;
  label: string;
}

interface Props {
  sectionLinks: NavItem[];
  showAllTalks?: boolean;
  showBackHome?: boolean;
}

const { sectionLinks, showAllTalks = true, showBackHome = true } = Astro.props;
---

<nav
  aria-label="Talks section navigation"
  class="talks-subnav sticky top-24 z-30 mb-8 rounded-2xl border border-border/70 bg-background/90 px-4 py-3 shadow-[0_12px_34px_hsl(var(--foreground)/0.08)] backdrop-blur sm:px-5"
>
  <div class="flex flex-wrap items-center justify-between gap-3">
    <div class="flex flex-wrap items-center gap-2">
      {sectionLinks.map((item) => (
        <a
          href={item.href}
          class="talks-subnav-link rounded-full border border-border/70 bg-secondary/55 px-3 py-1.5 text-xs font-semibold tracking-[0.08em] uppercase text-muted-foreground hover:border-border hover:bg-secondary/80 hover:text-foreground"
        >
          {item.label}
        </a>
      ))}
    </div>

    <div class="flex items-center gap-2 text-xs sm:text-sm">
      {showAllTalks && (
        <a
          href="/talks"
          class="rounded-full border border-border/70 bg-card/70 px-3 py-1.5 font-medium text-foreground hover:bg-card"
        >
          All talks
        </a>
      )}
      {showBackHome && (
        <a
          href="/"
          class="rounded-full border border-border/70 bg-card/70 px-3 py-1.5 font-medium text-foreground hover:bg-card"
        >
          Home
        </a>
      )}
    </div>
  </div>
</nav>
